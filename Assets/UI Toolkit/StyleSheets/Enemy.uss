    height: 300px;
    width: 200px;
    background-color: rgba(0, 0, 0, 0);
}

    .combatantFrame:hover {
        background-color: rgba(0, 0, 0, 0);
    }

.statusPanel {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}

