.cardFrame {
    width: 200px;
    height: 300px;
    align-items: center;
    justify-content: space-between;
    background-color: rgb(40, 40, 40);
    padding: 6px;
    border-width: 12px;
    border-radius: 24px;
    border-color: rgb(9, 21, 48);
    flex-shrink: 0;
    color: rgb(220, 220, 220);
}

.beltUI .cardFrame {
    border-color: rgb(73, 70, 15);
}

.cardFrame:hover {
    scale: 1.2 1.2;
    margin-left: 100px;
    margin-right: 100px;
    background-color: rgb(100, 100, 100);
}

.beltUI .cardFrame:hover {
    margin-left: 0;
    margin-right: 0;
    margin-top: 150px;
    margin-bottom: 150px;
}

.cardLabel {
    align-self: center;
}

.cardIcon {
    width: 100px;
    height: 100px;
}

.cardDescription {
}

.hordeUI {
    position: absolute;
