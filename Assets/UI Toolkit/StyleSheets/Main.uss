}

.enemyFrame {
    position: absolute;
    height: 300px;
    width: 150px;
    flex-direction: row;
    justify-content: space-evenly;
    background-color: rgba(0, 0, 0, 0);
    overflow: visible;
}

.enemyFrame:hover {
    background-color: rgba(0, 0, 0, 0);
}

.effectFrame {
    height: 76px;
    width: 76px;
    flex-shrink: 0;
}

.effectAmount {
    color: rgb(243, 243, 243);
    -unity-text-align: upper-center;
    text-shadow: -6px 3px 0 rgba(0, 0, 0, 1);
}

.endTurnButton {
